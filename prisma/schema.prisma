generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model test {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}

model User {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  email    String? @unique
  username String  @unique
  password String
  name     String?
  avatar   String?
  role     String  @default("user")
}

model Links {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  link      String?
  active    Boolean @default(true)
  important Boolean @default(false)
  image     String?
}
